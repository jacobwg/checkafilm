extends layout

block content
  div.row
    div.span12
      h1 #{title} (#{release_date.year()})
      p= overview
      p= release_date
      p
        img(src="http://cf2.imgobject.com/t/p/w342" + poster_path)
      p
        img(src="http://cf2.imgobject.com/t/p/w1280" + backdrop_path)

      ul.thumbnails
        each member in casts.cast
          li.span2
            div.thumbnail
              img(src="http://cf2.imgobject.com/t/p/w92" + member.profile_path)
              p #{member.name} as #{member.character}