div.rotten-tomatoes {

  .critics, .consensus, .audience {
    float: left;
    padding: 6px;
    border-radius: 8px;
    background: #ffe37c; /* Old browsers */
    background: -moz-linear-gradient(top,  #ffe37c 0%, #fffed7 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffe37c), color-stop(100%,#fffed7)); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(top,  #ffe37c 0%,#fffed7 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(top,  #ffe37c 0%,#fffed7 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(top,  #ffe37c 0%,#fffed7 100%); /* IE10+ */
    background: linear-gradient(to bottom,  #ffe37c 0%,#fffed7 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffe37c', endColorstr='#fffed7',GradientType=0 ); /* IE6-9 */
    margin: 6px;
  }

  div.meter_box {
    line-height:normal;
    margin:0;
    padding:0;
    color:#556F1E;
    display:block;
  }

  .consensus {
    max-width: 190px;
    text-align: justify;
    font-size: 11px;
    line-height: 13px;
    color: #6F6A57;
    padding: 6px;
  }

  .header {
    text-transform: uppercase;
    font-weight: bold;
    padding-bottom: 6px;
  }

  .meter{clear:left;color:#506A16;font-size:44px;font-weight:bold;white-space:nowrap;display:block;float:left;background:transparent url('http://images.rottentomatoescdn.com/images/tomatometer/rt_lg.png?v=20110531') no-repeat left top;background-repeat:no-repeat;vertical-align:middle;padding-left:55px;margin-bottom:4px;min-height:50px;max-height:50px;line-height:24px;}
  .meter.noScore{font-size:26px;background-image:none;padding-top:10px;padding-left:0;min-height:40px;}
  .meter.noReviews{font-size:26px;background-image:none;padding-top:10px;padding-left:0;min-height:30px;}
  .meter.numeric{font-size:48px;}
  .meter.numeric.perfect{font-size:40px;}
  .meter.numeric:after{content:'%';vertical-align:super;font-size:24px;}
  .meter.numeric.perfect:after{font-size:15px;}
  .meter.empty{padding-left:0;background-position:-50px 50px;}
  .meter.empty:after{content:'';}
  .meter.fresh{background-position:0 0;}
  .meter.rotten{background-position:0 -50px;}
  .meter.certified{background-position:0 -100px;}
  .meter.upright{background-position:0 -150px;margin-bottom:1px;}
  .meter.wts{background-position:0 -200px;margin-bottom:0;}
  .meter.spilled{background-position:0 -250px;margin-bottom:1px;}

  .want-to-see {
    padding: 0 0 0 50px;
    font-weight: bold;
  }


