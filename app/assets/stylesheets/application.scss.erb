}

.thumbnail a:hover {
  text-decoration:none
}

.trailers {
  .thumbnail {
    background-color: #000;
    border-color: #222;
  }

  .thumbnail {
    position: relative;
  }

  .thumbnail:before {
    content: "\f04b";
    font-family: FontAwesome;
    font-size: 40px;
    font-weight: normal;
    text-decoration:none;
    color: #111;
    text-shadow: 0px 0px 15px #fff;
    z-index: 20;
    position: absolute;
    left: 50%;
    top: 50%;
    padding: 0;
    margin: 0;
    margin-left: -15px;
    //margin-top: -20px;
  }
}


